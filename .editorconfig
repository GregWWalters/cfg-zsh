# EditorConfig is awesome: https://EditorConfig.org

[*]
end_of_line = lf
trim_trailing_whitespace = true
charset = utf-8
insert_final_newline = true

[{*rc,.*rc}]
indent_style = tab

[{*.sh,*.bash,*.zsh]]
indent_style = space

[{*.yaml,*.yml}]
indent_style = tab

[{*.md,*.mkd}]
indent_style = space

[{Makefile, Dockerfile}]
indent_style = tab

